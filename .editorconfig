# .editorconfig
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{java,xml}]
indent_size = 4
tab_width = 4

[{pom,wro}.xml]
indent_size = 2

[*.{md,mdx,diff}]
trim_trailing_whitespace = false

[*.sql]
indent_size = 2

[*.{html,css,js}]
indent_size = 2
